<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activity.TanyaUstadzActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="36dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border_menu"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:background="@drawable/ic_arrow_back"
                    android:contentDescription="Back" />
            </LinearLayout>

            <TextView
                style="@style/TextAppearance.App.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanya Pak Ustadz !!!"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/llChatContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInitialWelcome"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="start" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="36dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_gray"
            android:hint="   Tanya Pak Ustadz..."
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:minHeight="40dp"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btnAsk"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/BiruTua"
            android:contentDescription="Kirim Pesan"
            android:background="@drawable/button_tanya"
            android:scaleType="centerInside"
            android:src="@drawable/ic_send"
            app:tint="@color/white"
            app:cornerRadius="80dp" />
    </LinearLayout>

</LinearLayout>