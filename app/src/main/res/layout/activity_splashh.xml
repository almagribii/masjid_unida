<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BiruPalingMuda"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.SplashhActivity">

    <LinearLayout
        android:id="@+id/logo_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Logo Aplikasi"
        android:src="@drawable/logo_masjid" />

    <TextView
        style="@style/TextAppearance.App.HeadlineMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_splash"
        android:layout_marginTop="8dp"
        android:text="MasjidQu"
        android:textColor="@color/BiruTua"
        android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>